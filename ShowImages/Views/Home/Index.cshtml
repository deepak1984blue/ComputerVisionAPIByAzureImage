@model List<ShowImages.Utility.ImageModel>
@{
    ViewData["Title"] = "Azure Customer Image";
}
<style>
    img {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 10px;
        width: 270px;
        height:200px;
    }
</style>
    <div class="row">
        @foreach (ShowImages.Utility.ImageModel imageModel in Model)
        {
        <div class="col-md-3">
            <a style="cursor:pointer;" onclick="location.href ='@Url.Action("ShowInformation", "Home", new { url = imageModel.URL })'">
                <img src="@imageModel.URL" alt="@imageModel.Name" />
                <div class="col-md-12 text-center">
                    <b>@imageModel.Name</b>
                </div>
            </a>
        </div>
        }
    </div>
        

